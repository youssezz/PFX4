<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SaisieOffreDeStageControlleur2">
   <center>
      <AnchorPane prefHeight="480.0" prefWidth="720.0">
      	<children>
      		<Label layoutX="129.0" layoutY="44.0" prefHeight="66.0" prefWidth="462.0" text="Saisie d'une offre de stage">
      			<font>
      				<Font name="Agency FB" size="55.0" />
      			</font>
      		</Label>
      		<Label layoutX="289.0" layoutY="134.0" text="Descriptif de l'offre" underline="true">
