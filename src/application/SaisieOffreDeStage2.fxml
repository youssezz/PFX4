      		</Label>
      		<TextArea fx:id="descOffre" layoutX="76.0" layoutY="169.0" prefHeight="232.0" prefWidth="569.0" />
      		<ButtonBar layoutX="244.0" layoutY="419.0" prefHeight="40.0" prefWidth="233.0">
      			<buttons>
      				<Button fx:id="confirmer" mnemonicParsing="false" onAction="#clicConfirmer" text="Poster l'offre" textFill="#00ff26">
